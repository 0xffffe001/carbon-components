{
  "name": "bluemix-pattern-library",
  "version": "0.0.11",
  "description": "The Bluemix Pattern Library is a collection of commonly used, reusable UI elements for developers to use in their prototypes and production work for Bluemix -- the scope of this project may expand to be used more widely throughout IBM.",
  "files": [
    ".npmignore",
    "dist",
    "README.md"
  ],
  "dependencies": {
    "bluemix-colors": "0.0.7",
    "bluemix-typography": "0.0.10"
  },
  "devDependencies": {
    "browser-sync": "^2.8.2",
    "csscomb": "^3.1.8",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^2.3.1",
    "gulp-jshint": "^1.11.2",
    "gulp-plumber": "^1.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.0.4",
    "jshint-stylish": "^2.0.1",
    "npm-check-updates": "^2.2.0"
  },
  "scripts": {
    "css:sort": "csscomb -c ./csscomb.json dev/patterns/**/*.scss",
    "install:scss-lint": "gem install scss_lint && npm install gulp-scss-lint",
    "serve": "gulp",
    "update:all": "ncu --upgradeAll",
    "update:check": "ncu"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "bluemix",
    "component",
    "components",
    "css",
    "html",
    "ibm",
    "javascript",
    "js",
    "library",
    "pattern",
    "patterns",
    "sass",
    "scss",
    "style guide"
  ],
  "contributors": [
    "Brian Han <bthan@us.ibm.com>",
    "Jefferson Lam <jwlam@us.ibm.com>",
    "Una Kravets <unakravets@us.ibm.com>"
  ]
}
